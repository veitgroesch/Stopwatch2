<div id="winnersMenu1" class="well well-sm menu">
    <div id="login">
        Anmelden:
        {{input type='password' value=password placeholder="Passwort"}}
    </div>
    Klasse:
    {{input class='input' type="text" placeholder='Klasse' value=filtersn}}

    &nbsp;{{input type="checkbox" checked=tbodyLargeFont}} Große Schrift
    {{#if admin}}
        &nbsp;
        <button id="buttonToggleRunden" class="btn btn-primary" onclick="toggleRunden();">Runden einblenden</button>
        &nbsp;
        <button class="btn btn-primary" {{action createCSV}}>Übersicht speichern</button>   {{/if}}
</div>

<script>
    function toggleRunden() {
        b = document.getElementById('buttonToggleRunden');
        if (b.innerHTML == "Runden ausblenden") {
            $('.winnerLapsDiv').hide();
            b.innerHTML = "Runden einblenden"
        } else {
            $('.winnerLapsDiv').show();
            b.innerHTML = "Runden ausblenden"
        }
    }
</script>

<div id="winnersMenu2" class="well well-sm menu">
    Mindestanzahl Läufe:
    {{input class='input' type="text" placeholder='0' value=minRaces}}
    &nbsp;&nbsp;&nbsp;{{input type="checkbox" checked=lastRace}} Letzer Lauf gefahren
    &nbsp;&nbsp;&nbsp;
    {{view "Ember.Select"
        multiple="true"
        content=racesToCountNames
        optionValuePath="content.id"
        optionLabelPath="content.name"
        selectionBinding="racesToCount"
    }}
    Gewertete Läufe:
    {{#each racesToCount}}
        {{name}} -
    {{/each}}
</div>

<table class="table table-striped table-hover lapTable verticalmiddle" id="winnersTable">
    <thead>
    <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody {{bind-attr class=tbodyClass}}>

    {{#each car in groupedResults}}
        <tr>
            <td class="startnummer"><strong>{{car.position}})</strong></td>

            <td class="startnummer"><strong>{{car.startnummer}}</a></td>
            <td class="startnummer"><strong>{{car.name}}</strong></td>
            <td class="startnummer"><strong>{{car.car}}</strong></td>
            <td class="startnummer"><strong>{{car.year}}</strong></td>
            {{#if car.error}}
                <td class="tdError" colspan="3">
                    <strong>{{car.errorMessage}}</strong>
                </td>
            {{else}}
                <td>
                    <strong>&#916; = {{car.delta}}&nbsp;s</strong>
                </td>
                <td>
                    <strong>v = {{car.velocity}}&nbsp;km/h</strong>
                </td>
                <td class="winnerImage">
                    {{#if car.filename}}
                        <img width="150" {{bind-attr src=car.filename}}>
                    {{/if}}
                </td>
            {{/if}}
        </tr>

        <tr class="winnersLaps">
            <td></td>
            <td colspan="7">
                <div class="winnerLapsDiv">
                    {{#each race in car.races}}
                        {{#if race.inWertung}}
                            <strong>{{race.lauf}}. Lauf:&nbsp;</strong>
                            {{#if race.abort}}
                                Abgebrochen&nbsp;&nbsp;
                            {{else}}
                                {{#if race.error}}
                                    Messfehler&nbsp;&nbsp;
                                {{else}}
                                    &#916; = {{race.meanDelta}}&nbsp;&nbsp;
                                {{/if}}
                            {{/if}}
                        {{/if}}

                    {{/each}}
                </div>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
