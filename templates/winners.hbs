<div id="winnersMenu1" class="well well-sm menu">
    <div id="login">
        Anmelden:
        {{input type='password' value=password placeholder="Passwort"}}
    </div>
    &nbsp;<input type="radio" name="radiogroup" checked {{action "radioChanged" "radioClass" on="change" }}/>
    Klasse:
    {{input class='input' type="text" placeholder='Klasse' value=filtersn class="inputClass"}}
    &nbsp;<input type="radio" name="radiogroup" {{action "radioChanged" "radioCars" on="change" }}/> Autos
    &nbsp;<input type="radio" name="radiogroup" {{action "radioChanged" "radioBikes" on="change" }}/> Motorräder
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{input type="checkbox" checked=tbodyLargeFont}} Große Schrift
    &nbsp;{{input type="checkbox" checked=showLaps}} Runden anzeigen
    {{#if admin}}
        &nbsp;
        <button class="btn btn-primary" {{action createCSV}}>Übersicht speichern</button>   {{/if}}
</div>

<div id="winnersMenu2" class="well well-sm menu">
    Mindestanzahl Läufe:
    {{input class='input' type="text" placeholder='0' value=minRaces}}
    &nbsp;&nbsp;&nbsp;{{input type="checkbox" checked=lastRace}} Letzer Lauf gefahren
    &nbsp;&nbsp;&nbsp;
    {{view "Ember.Select"
        multiple="true"
        content=racesToCountNames
        optionValuePath="content.id"
        optionLabelPath="content.name"
        selectionBinding="racesToCount"
    }}
    Gewertete Läufe:
    {{#each racesToCount}}
        {{name}} -
    {{/each}}
</div>

<table class="table table-striped table-hover lapTable verticalmiddle" id="winnersTable">
    <thead>
    <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody {{bind-attr class=tbodyClass}}>

    {{#each car in groupedResults}}
        <tr>
            <td class="strong"><strong>{{car.position}})</strong></td>
            <td class="strong"><strong>{{car.startnummer}}</strong></td>
            <td><strong>{{car.name}}</strong></td>
            <td><strong>{{car.car}}</strong></td>
            <td><strong>{{car.year}}</strong></td>
            {{#if car.error}}
                <td class="tdError" colspan="3">
                    <strong>{{car.errorMessage}}</strong>
                </td>
            {{else}}
                <td>
                    <strong>&#916; = {{car.delta}}&nbsp;s</strong>
                </td>
                <td>
                    <strong>v = {{car.velocity}}&nbsp;km/h</strong>
                </td>
                <td class="winnerImage">
                    {{#if car.filename}}
                        <img width="150" {{bind-attr src=car.filename}}>
                    {{/if}}
                </td>
            {{/if}}
        </tr>

        <tr {{bind-attr class=winnerLapsClass}}>
            <td></td>
            <td colspan="7">
                <div>
                    {{#each race in car.races}}
                        {{#if race.inWertung}}
                            <span class="inWertung">
                        {{else}}
                            <span class="nichtInWertung">
                        {{/if}}
                        <strong>{{race.lauf}}. Lauf:&nbsp;</strong>
                        {{#if race.abort}}
                            Abgebrochen&nbsp;&nbsp;
                        {{else}}
                            {{#if race.error}}
                                Messfehler&nbsp;&nbsp;
                            {{else}}
                                &#916; = {{race.meanDelta}}&nbsp;&nbsp;
                            {{/if}}
                        {{/if}}
                        </span>
                    {{/each}}
                </div>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
